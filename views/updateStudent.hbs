<div class="container form-group " style="padding: 10% 0% 10% 0%">
    <div class="bg-dark col-6 text-light p-4">
    <form id="updateStudent" action="/viewStudent" method="post">
        <label for="fName">First Name:</label>
        <input type="text" class="form-control" id="fName" name="fName" value={{student.fname}}>
        <label for="lName">Last Name:</label>
        <input type="text" class="form-control" id="lName" name="lName" value={{student.lname}}>
        <label for="age">Age:</label>
        <input type="text" class="form-control" id="age" name="age" value={{student.ageStudent}}>
        School: <select class="form-control" name="school" id="school-selector">
            {{#each schools}}
                <option value="{{school_id}}">{{name}}</option>
            {{/each}}
        </select><br>
        House: <select class="form-control" name="house" id="house-selector"> 
            {{#each houses}}
                <option value="{{house_id}}">{{name}}</option>
            {{/each}}
        </select><br>
         Pet: <select class="form-control" name="pet" id="pet-selector"> 
            {{#each pets}}
                <option value="{{pet_id}}">{{name}}</option>
            {{/each}}
        </select><br>
         Wand: <select class="form-control" name="wand" id="wand-selector"> 
            {{#each wands}}
                <option value="{{wand_id}}">{{id}}</option>
            {{/each}}
        </select><br>
    </form>
    <button class="btn btn-primary" onclick="updateStudent({{student.sID}})">Update</button>
    </div>
    <script defer>selectSchool({{student.school}});</script>
    <script defer>selectHouse({{student.house}});</script>
    <script defer>selectPet({{student.pet}});</script>
    <script defer>selectWand({{student.wand}});</script>
</div>