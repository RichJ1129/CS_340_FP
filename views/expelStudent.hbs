<br />
<h2>Expel Student:</h2>
<form id="expelStudent" action="/expelStudent" method="post">
    <div>
        <label class="inputLabel">Student Name (Required):</label>
        <select name="first_name_remove" id="first_name_remove">
            <option value="" selected="selected">Select Student</option>
            {{#if students}}
            {{#each students}}
            <option id="selectedName" value="{{this.id}}">{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
            {{/if}}
        </select>
    </div>
    <br />
    <div>
        <input type="submit" name="Expel Student" value="Expel Student" id="postExpelStudent">
    </div>
</form>