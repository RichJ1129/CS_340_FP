<div class="container" style="padding: 10% 0% 10% 0%">
    <label for="filter-by">Filter by:</label>
    <select name="studentID_dropdown" id="filter-by-select">
    	<option value="">Select Filter</option>
            <optgroup label="Students">
                {{#each student}}
                <option value={{student_id}}>{{first_name}} {{last_name}}</option>
                {{/each}}
            </optgroup>
            <optgroup label="Classes">
                {{#each class}}
                <option value={{class_id}}>{{name}}</option>
                {{/each}}
            </optgroup>
    </select>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Class</th>
            <th scope="col">Professor</th>
	    <th scope="col">Drop Class</th>
			
        </tr>
        </thead>
        <tbody>
            {{#each student_class}}
            <tr>
                <td>{{fname}}</td>
                <td>{{lname}}</td>
                <td>{{class}}</td>
                <td>{{professor}}</td>
                <td><button>Drop</button></td>
            </tr>
            {{/each}}
        <tr>

        </tr>
        <tr>

        </tr>
        </tbody>
    </table>
</div>
