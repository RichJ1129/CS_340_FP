<div class="container" style="padding: 10% 0% 10% 0%">
    <div class="bg-dark col-6 text-light p-4">
        <h2 class="text-center">Update Pet</h2>
        <form id="updatePet" action="/viewPet" method="post">
            <label for="fName" class="mt-3">First Name:</label>
            <input type="text" class="form-control" id="petName" name="petName" value={{pet.petName}}>
            <label for="lName" class="mt-3">Last Name:</label>
            <input type="text" class="form-control" id="petSpecies" name="petSpecies" value={{pet.petSpecies}}>
            <br>
            <button type="button" class="btn btn-primary" onclick="updatePet({{pet.petID}})">Update
                Pet</button>
        </form>
    </div>
    <br>
</div>