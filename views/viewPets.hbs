<div class="container" style="padding: 10% 0% 10% 0%">
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Pet ID</th>
            <th scope="col">Name</th>
            <th scope="col">Species</th>
        </tr>
        </thead>
        <tbody>
        {{#each pet}}
            <tr>
                <td>{{petID}}</td>
                <td>{{name}}</td>
                <td>{{species}}</td>
            </tr>
        {{/each}}
        </tbody>
</div>
