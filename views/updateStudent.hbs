<div class="container form-group " style="padding: 10% 0% 10% 0%">
    <div class="bg-dark col-6 text-light">
    <form id="update-student" action="/viewStudent" method="post">
        First name: <input class="form-control" type="text" name="first_name" value="{{student.first_name}}"><br>
        Last name: <input class="form-control" type="text" name="last_name" value="{{student.last_name}}"><br>
        Age: <input class="form-control" type="number" name="age" value="{{student.age}}"><br>
        School: <select name="school" id="school-selector"> 
            {{#each school}}
                <option value="{{school_id}}">{{name}}</option>
            {{/each}}
        </select><br>
        House: <select class="form-control" name="house" id="house-selector"> 
            {{#each school}}
                <option value="{{house_id}}">{{name}}</option>
            {{/each}}
        </select><br>
         Pet: <select class="form-control" name="pet" id="pet-selector"> 
            {{#each school}}
                <option value="{{pet_id}}">{{name}}</option>
            {{/each}}
        </select><br>
         Wand: <select class="form-control" name="wand" id="wand-selector"> 
            {{#each school}}
                <option value="{{wand_id}}">{{name}}</option>
            {{/each}}
        </select><br>
    </form>
    <button class="btn btn-primary" onclick="updateStudent({{student.student_id}})">Update</button>
    </div>
    <script defer>selectSchool({{student.school}});</script>
    <script defer>selectHouse({{student.house}});</script>
    <script defer>selectPet({{student.pet}});</script>
    <script defer>selectWand({{student.wand}});</script>
</div>