<div class="container" style="padding: 10% 0% 10% 0%">
    <div class="form-group col-3 bg-dark p-3">
        <label class="bg-dark text-light" for="filter-by">Filter by:</label>
        <select class="form-control" name="studentID_dropdown" id="filter-by-select">
            <option value="">Select Filter</option>
                <optgroup label="Students">
                    {{#each student}}
                    <option value={{this.student_id}}>{{this.first_name}} {{this.last_name}}</option>
                    {{/each}}
                </optgroup>
                <optgroup label="Classes">
                    {{#each class}}
                    <option value={{this.class_id}}>{{this.name}}</option>
                    {{/each}}
                </optgroup>
        </select>
    </div>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Class</th>
            <th scope="col">Professor</th>
	    <th scope="col">Drop Class</th>
			
        </tr>
        </thead>
        <tbody>
            {{#each student_class}}
            <tr>
                <td>{{fname}}</td>
                <td>{{lname}}</td>
                <td>{{class}}</td>
                <td>{{professor}}</td>
                <td><button>Drop</button></td>
            </tr>
            {{/each}}
        <tr>

        </tr>
        <tr>

        </tr>
        </tbody>
    </table>
</div>
