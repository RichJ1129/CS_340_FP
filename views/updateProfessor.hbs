<div class="container form-group" style="padding: 10% 0% 10% 0%">
    <div class="bg-dark col-6 text-light p-4">
        <h2 class="text-center">Update Professor</h2>
        <form id="updateProfessor" action="/viewProfessor" method="post">
            <label for="fName">First Name:</label>
            <input type="text" class="form-control" id="fName" name="fName" value={{professor.fname}}>
            <label for="lName" class="mt-3">Last Name:</label>
            <input type="text" class="form-control" id="lName" name="lName" value={{professor.lname}}>

            <label for="schoolSelect" class="mt-3">School:</label>
            <select class="form-control" id="schoolSelect" name="school">
                <option value=NULL>Select School</option>
                <option value=1>Hogwarts School of Witchcraft and Wizardry</option>
                <option value=2>Beauxbatons Academy of Magic</option>
                <option value=3>Durmstrang Institute</option>
            </select>

            <label for="houseSelect" class="mt-3">House:</label>
            <select class="form-control" id="houseSelect" name="house">
                <option value=NULL>Select House</option>
                <option value=1>Gryffindor - Hogwarts</option>
                <option value=2>Hufflepuff - Hogwarts</option>
                <option value=3>Ravenclaw - Hogwarts</option>
                <option value=4>Slytherin - Hogwarts</option>
                <option value=5>Bellefeuille - Beauxbatons</option>
                <option value=6>Ombrelune - Beauxbatons</option>
                <option value=7>Papillonlisse - Beauxbatons</option>
            </select>

            <label for="petSelect" class="mt-3">Pet:</label>
            <select class="form-control" id="petSelect" name="pet">
                <option value=NULL>Select Pet</option>
                {{#each pets}}
                <option value={{this.pet_id}}>{{this.name}}</option>
                {{/each}}
            </select>
            <br>
            <button type="button" class="btn btn-primary mt-3" onclick="updateProfessor({{professor.pID}})">Update
                Professor</button>
        </form>
    </div>
    <br>
</div>