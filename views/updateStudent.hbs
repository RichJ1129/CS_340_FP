<div class="container form-group " style="padding: 10% 0% 10% 0%">
    <div class="bg-dark col-6 text-light p-4">
    <form id="updateStudent" action="/viewStudent" method="post">
        <label for="fName">First Name:</label>
        <input type="text" class="form-control" id="fName" name="fName" value={{student.fname}}>
        <label for="lName">Last Name:</label>
        <input type="text" class="form-control" id="lName" name="lName" value={{student.lname}}>
        <label for="age">Age:</label>
        <input type="text" class="form-control" id="age" name="age" value={{student.ageStudent}}>
        <label for="schoolSelect">School:</label>
        <select class="form-control" id="schoolSelect" name="school">
            <option>Select School</option>
            <option value=1>Hogwarts School of Witchcraft and Wizardry</option>
            <option value=2>Beauxbatons Academy of Magic</option>
            <option value=3>Durmstrang Institute</option>
        </select>
        <label for="houseSelect">House:</label>
        <select class="form-control" id="houseSelect" name="house">
             <option selected>Select House</option>
             <option value=1>Gryffindor - Hogwarts</option>
             <option value=2>Hufflepuff - Hogwarts</option>
             <option value=3>Ravenclaw - Hogwarts</option>
             <option value=4>Slytherin - Hogwarts</option>
             <option value=5>Bellefeuille - Beauxbatons</option>
             <option value=6>Ombrelune - Beauxbatons</option>
             <option value=7>Papillonlisse - Beauxbatons</option>
        </select>
        Pet: <select class="form-control" name="pet" id="pet-selector">
            <option selected>Select Pet</option>
            {{#each pets}}
                <option value={{this.id}}>{{name}}</option>
            {{/each}}
        </select><br>
        <br>
    </form>
    <button class="btn btn-primary" onclick="updateStudent({{student.sID}})">Update Student</button>
    </div>
    <script defer>selectSchool({{student.school}});</script>
    <script defer>selectHouse({{student.house}});</script>
    <script defer>selectPet({{student.pet}});</script>
    
</div>